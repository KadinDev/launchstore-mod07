{% extends 'layout.njk' %}

{% block content %}

    <section class="password container form">

        <!-- o action manda as info para o mesmo aquivo njk criado -->
        <form method="POST" action="/users/password-reset" >

            <div class="header">

                <h3>Nova senha </h3>
            </div>

            <div class="fields">
                <div class="item">
                    {% include 'session/reset-fields.njk' %}
                </div>

            </div>
            
            <button class="button" type="submit"> Nova senha </button>

        
        </form>

    </section>
    

{% endblock content %}